{% javascript %}
  $(document).ready(function (){
$(".tabs").find('.tab-click').click(function(){

  console.log('test');
      var col_tab_id = $(this).attr('data-content');
//alert(col_tab_id);
      $('.tab-click').removeClass('current');
      $('.imcls').removeClass('current');

      $(this).addClass('current');
      $("#"+col_tab_id).addClass('current');

     console.log('gggggg');
    $('.col-tab-pro_').slick({
      infinite: true,
      slidesToShow: 4, 
      autoplay: true,
      dots: false,
     slidesToScroll: 1, 
      arrows: true,
      responsive: [
        {
          breakpoint: 768,
          settings: {
            arrows: true,
            centerPadding: '40px',
            slidesToShow: 2,
            slidesToScroll: 1
          }
        },
        {
          breakpoint: 480,
          settings: {
            arrows: true,
            centerPadding: '40px',
            slidesToShow: 1,
            slidesToScroll: 1
          }
        }
      ]
    });

    })
   });
{% endjavascript %}
